{
  "name": "linguai",
  "version": "0.1.0",
  "private": true,
  "description": "AI-native acoustic analysis platform - the modern successor to Praat",
  "workspaces": [
    "frontend",
    "website"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:website": "npm run dev --workspace=website",
    "build:frontend": "npm run build --workspace=frontend",
    "build:website": "npm run build --workspace=website",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "test": "npm run test --workspaces --if-present"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adtruiz/linguai.git"
  },
  "keywords": [
    "linguistics",
    "phonetics",
    "acoustic-analysis",
    "spectrogram",
    "praat",
    "speech-analysis",
    "ai"
  ],
  "author": "adtruiz",
  "license": "GPL-3.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.4.0",
    "typescript": "^5.6.0"
  }
}
